{
    // Para casi cualquier VSCode-like 
    // ---------------------------------------------
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.navigationControl.enabled": false,
    "editor.fontFamily": "Maple Mono NF",
    "editor.mouseWheelScrollSensitivity": 5,
    "workbench.list.mouseWheelScrollSensitivity": 5,
    "telemetry.telemetryLevel": "off",
    "telemetry.feedback.enabled": false,
    "telemetry.editStats.enabled": false,
    // Ajustes para Wrap
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "same",
    "editor.glyphMargin": true,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "line",
    "editor.renderControlCharacters": false,
    // Preferencias Personales
    "editor.minimap.enabled": false,
    "workbench.activityBar.location": "top",
    "window.menuBarVisibility": "compact",
    "extensions.ignoreRecommendations": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.cursorBlinking": "phase",
    "vim.cursorStylePerMode.insert": "underline",
    "vim.cursorStylePerMode.normal": "block-outline",
    "editor.linkedEditing": true,
    "editor.fontSize": 16,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,
    // Configuraciones para Catppuccin
    "catppuccin.extraBordersEnabled": true,
    "editor.semanticHighlighting.enabled": true,
    "terminal.integrated.minimumContrastRatio": 1,
    "workbench.layoutControl.enabled": false
    // --------------------------------------------
}